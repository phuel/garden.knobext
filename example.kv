#:kivy 2.0

<Main>
GridLayout:
    pos: root.pos
    size: root.size
    cols: 3
    spacing: 50
    padding: 50

    Knob:
        min:4
        max:5
        size: 200, 200
        value: 0
        show_marker: True
        knobimg_source: "img/knob_metal.png"
        show_marker: False

    Knob:
        size: 200, 200
        value: 0
        show_marker: True
        knobimg_source: "img/knob_metal.png"
        marker_img: "img/bline.png"
        markeroff_color: 0.3, 0.3, .3, 1

    Knob:
        size: 200, 200
        value: 0
        show_marker: True
        knobimg_source: ""
        knobimg_color: 0, 0, 0, 0
        marker_img: "img/bline.png"
        markeroff_color: 0, 0, 0, 0
        marker_inner_color: 0, 0, 0, 1

    Knob:
        size: 200, 200
        value: 0
        show_marker: True
        knobimg_source: "img/knob_metal.png"
        marker_img: "img/bline.png"
        markeroff_color: 0.0, 0.0, .0, 1
        knobimg_size: 0.7

    Knob:
        size: 200, 200
        step: 25
        value: 10
        show_marker: True
        knobimg_source: "img/knob_metal.png"
        marker_img: "img/bline2.png"
        markeroff_img: "img/bline2_off.png"
        markeroff_color: 0.3, 0.3, .3, 1
        marker_ahead: 6
        knobimg_size: 0.8
        marker_startangle: 6

    Knob:
        size: 200, 200
        value: 0
        knobimg_source: "img/knob_black.png"
        markeroff_color: 0.0, 0.0, .0, 1
        knobimg_size: 0.9
        marker_img: "img/bline3.png"

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 200, 250
        Knob:
            id: testknob1
            size_hint: None, None
            size: 200, 200
            value: 0
            start_angle: 225
            angle_range: 270
            knobimg_source: "img/knob_black.png"
            markeroff_color: 0.0, 0.0, 0.0, 1
            marker_color: 1.0, 1.0, 0.0, 1
            knobimg_size: 0.95
            show_marker: self.focus
        Label:
            size_hint_y: None
            height: 30
            text: "%.2f" % testknob1.value
            halign: 'center'
            valign: 'center'
            text_size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 200, 250
        Knob:
            id: testknob2
            size_hint: None, None
            size: 200, 200
            value: 0
            start_angle: 225
            angle_range: 270
            knobimg_source: "img/knob_black.png"
            markeroff_color: 0.0, 0.0, 0.0, 1
            marker_color: 1.0, 0.6, 0.0, 1
            knobimg_size: 0.95
            show_marker: True
        Label:
            size_hint_y: None
            height: 30
            text: "%.2f" % testknob2.value
            halign: 'center'
            valign: 'center'
            text_size: self.size
