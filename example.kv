#:kivy 1.0

<Knob>:
    size_hint: None, None
    size: 150, 150

<MetalKnob@Knob>:
    knobimg_source: "img/knob_metal.png"

<BlackKnob@Knob>:
    knobimg_source: "img/knob_black.png"

<DecimalTickKnob>:
    size_hint: None, None
    size: 150, 150
    min: 0
    max: 10
    value: 0
    start_angle: 225
    angle_range: 270
    knobimg_source: "img/knob_black3.png"
    focus_knobimg_source: "img/focus_knob_black3.png"
    knobimg_size: 0.7
    markeroff_color: 0, 0, 0, 1
    show_marker: False

<SymmetricTickKnob>:
    size_hint: None, None
    size: 150, 150
    min: -50
    max: 50
    value: 0
    start_angle: 225
    angle_range: 270
    knobimg_source: "img/knob_black3.png"
    focus_knobimg_source: "img/focus_knob_black3.png"
    knobimg_size: 0.7
    markeroff_color: 0, 0, 0, 1
    show_marker: False

<RangeTickKnob>:
    size_hint: None, None
    size: 150, 150
    max: 2
    value: 0
    start_angle: 315
    angle_range: 90
    knobimg_source: "img/knob_black3.png"
    focus_knobimg_source: "img/focus_knob_black3.png"
    knobimg_size: 0.7
    markeroff_color: 0, 0, 0, 1
    show_marker: False

<ValueLabel@Label>:
    canvas.before:
        Color:
            rgba: 1,1,1,0.1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: 30
    halign: 'center'
    valign: 'center'
    text_size: self.size

<Main>:
GridLayout:
    pos: root.pos
    size: root.size
    cols: 3
    spacing: 50
    padding: 50

    MetalKnob:
        min:4
        max:5
        value: 0
        show_marker: False

    MetalKnob:
        value: 10
        show_marker: True
        marker_img: "img/bline.png"
        markeroff_color: 0.3, 0.3, .3, 1

    Knob:
        value: 30
        show_marker: True
        knobimg_source: ""
        knobimg_color: 0, 0, 0, 0
        marker_img: "img/bline.png"
        markeroff_color: 0, 0, 0, 0
        marker_inner_color: 0, 0, 0, 1

    MetalKnob:
        value: 0
        show_marker: True
        marker_img: "img/bline.png"
        markeroff_color: 0.0, 0.0, .0, 1
        knobimg_size: 0.7

    MetalKnob:
        step: 25
        value: 10
        show_marker: True
        marker_img: "img/bline2.png"
        markeroff_img: "img/bline2_off.png"
        markeroff_color: 0.3, 0.3, .3, 1
        marker_ahead: 6
        knobimg_size: 0.8
        marker_startangle: 6

    BlackKnob:
        value: 0
        knobimg_source: "img/knob_black.png"
        markeroff_color: 0.0, 0.0, .0, 1
        knobimg_size: 0.9
        marker_img: "img/bline3.png"

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 150, 200
        BlackKnob:
            id: testknob1
            value: 0
            start_angle: 225
            angle_range: 270
            markeroff_color: 0.0, 0.0, 0.0, 1
            marker_color: 1.0, 1.0, 0.0, 1
            knobimg_size: 0.95
            show_marker: self.focus
        ValueLabel:
            text: "%d" % testknob1.value

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 150, 200
        BlackKnob:
            id: testknob2
            value: 62
            start_angle: 225
            angle_range: 270
            knobimg_source: "img/knob_black.png"
            markeroff_color: 0.0, 0.0, 0.0, 1
            marker_color: 1.0, 0.6, 0.0, 1
            knobimg_size: 0.95
            show_marker: True
        ValueLabel:
            text: "%d" % testknob2.value

    Widget:

    DecimalTickKnob:
    
    SymmetricTickKnob:

    RangeTickKnob:
